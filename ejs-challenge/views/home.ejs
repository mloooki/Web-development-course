<%- include('partials/header'); -%>


<h1>Home</h1>
<p><%= homeParagraph %></p>

<% posts.forEach(function(element){ %>
   <h1><%=element.title%></h1>
   <% if (element.body.length > 100){ %>
    <p><%=element.body.substring(1, 101)+"..."; %> <a href="/posts/<%=element._id%>">Read More</a></p>
  <% } else{ %>
  <p> <%=element.body%> </p>
<%  } %>
<%});%>

<%- include('partials/footer'); -%>
